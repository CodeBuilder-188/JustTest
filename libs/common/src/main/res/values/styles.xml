<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!--        <item name="android:windowFullscreen">true</item>-->
    </style>

    <!--  Activity进入退出动画  -->
    <style name="slide" parent="AppTheme">

        <item name="android:activityOpenEnterAnimation">@anim/slide_bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_bottom_out</item>

    </style>

    <!--  Activity进入退出动画  start-->
    <style name="slide_right_in" parent="AppTheme">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
    </style>

    <style name="slide_left_out" parent="AppTheme">
        <item name="android:activityCloseExitAnimation">@anim/slide_left_out</item>
    </style>

    <style name="Activity.SlideBottomToTop" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/slide</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Activity.SlideRightIn" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/slide_right_in</item>
    </style>

    <style name="Activity.SlideLeftOut" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/slide_left_out</item>
    </style>

    <style name="Home_TabTextAppearance">
        <item name="android:textSize">12dp</item>
    </style>


</resources>